# .env Template für Python Log Checker
# Kopiere diese Datei zu .env und fülle die Werte aus

# SMTP-Konfiguration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Log Checker System

# Standard-Empfänger (kommagetrennt)
SMTP_DEFAULT_RECIPIENTS=admin@example.com,monitoring@example.com

# System-Einstellungen
SYSTEM_HOSTNAME=
SYSTEM_ENVIRONMENT=production
SYSTEM_TIMEZONE=Europe/Berlin

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Monitoring
HEALTH_CHECK_INTERVAL=30
SCRIPT_TIMEOUT=300
MAX_CONCURRENT_SCRIPTS=3
MAX_RETRIES=3
RETRY_DELAY=60

# Erweiterte Backup-Check Konfiguration
BACKUP_CHECK_DAYS=1
BACKUP_CHECK_START_DAY_OFFSET=0
BACKUP_CHECK_SERVER_NAME=Docker-Container